{% extends "../layout.twig" %}
{% block title %} Agregar autor {% endblock %}
{% block main_container %}
<h2>Agregar autor</h2>
<form class="form-horizontal" method="post" action="/authors/add">
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Nombre:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" placeholder="Nombre del autor" required/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Grupo:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" placeholder="Nombre del grupo" required/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="kind">Rol:</label>
        <div class="col-sm-10">
            <select class="form-control" id="kind" name="kind" required>
                <option value="pop">Cantante</option>
                <option value="folk">Bateria</option>
                <option value="rock">Guitarista</option>
                <option value="reagge">Teclista</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
    </div>
</form>
{% endblock %}